<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvFormularioTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Formulario de Artista"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNombreArtista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Artista"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etEdadArtista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edad"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etNacionalidadArtista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nacionalidad"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etFechaNacimientoArtista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha Nacimiento (DD-MM-AAAA)"
        android:inputType="datetime|date"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etLatitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Latitud 00.00"
        android:inputType="datetime|date"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etAltitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Altitud 00.00"
        android:inputType="datetime|date"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnGuardarArtista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4B3131"
        android:backgroundTint="#4B3131"
        android:text="Guardar"
        app:iconTint="#4B3131"
        app:rippleColor="#00BCD4"
        app:strokeColor="#4B3131" />
</LinearLayout>